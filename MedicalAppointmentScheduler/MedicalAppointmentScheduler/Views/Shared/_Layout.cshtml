<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Medical Scheduling Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryui")
    @Scripts.Render("~/bundles/bootstrap")

    <style>
        body {
            background-image: linear-gradient(to left, DarkGray 0%,white 100%);
            background-repeat: no-repeat;
            background-attachment: fixed;
            background-size: cover;
        }

        #header, #footer, #content {
            position: absolute;
            right: 0;
            left: 0;
        }

        #header {
            height: 100px;
            top: 0;
        }

        #footer {
            height: 100px;
            bottom: 0;
        }

        #content {
            top: 100px;
            bottom: 100px;
        }
    </style>
</head>

<body>
    <div id="header" class="navbar navbar-inverse navbar-fixed-top" style="border-bottom-color:#ff6a00; border-bottom-width:thick">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Medical Scheduler", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    @if (Request.IsAuthenticated && Session["LoggedInUserRole"] != null)
                    {

                        <li>@Html.ActionLink("HomePage", "Index", Session["LoggedInUserRole"].ToString())</li>
                    }
                    else
                    {
                        <li>@Html.ActionLink("HomePage", "Index", "Home")</li>
                    }
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div id="content" class="container body-content">
        @RenderBody()
    </div>

    <footer id="footer">

        <hr />
        <p>&copy; @DateTime.Now.Year - SSDI-FALL-2016-TEAM-2-5</p>
    </footer>

    
    @RenderSection("scripts", required: false)
</body>
</html>
